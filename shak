while getgenv().Toggle do
    local char = game:GetService("Players").LocalPlayer.Character
    if char then
        for _, tool in pairs(char:GetChildren()) do
            if string.find(tool.Name, "Pan") then
                local scriptsFolder = tool:FindFirstChild("Scripts")
                if scriptsFolder then
                    local shakeEvent = scriptsFolder:FindFirstChild("Shake")
                    if shakeEvent and shakeEvent:IsA("RemoteEvent") then
                        shakeEvent:FireServer()
                    end
                end
            end
        end
    end
    task.wait(0.001)
end
